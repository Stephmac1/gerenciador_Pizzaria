<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/cor_de_fundo"
    android:weightSum="2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/texto_produto"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:background="@color/cor_de_fundo"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/texto_quantidade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical|end"
        android:background="@color/cor_de_fundo"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/botao_editar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="editarClick"
        app:srcCompat="@drawable/baseline_edit_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/botao_deletar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="deletarClick"
        app:srcCompat="@drawable/baseline_delete_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
</LinearLayout>